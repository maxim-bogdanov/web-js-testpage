
mixin inner-part()
  .inner-part
    |<script type="text/template" class="__tpl">
    .inner-part__image
      img(src="{{image}}")
    .inner-part-content
      h2.inner-part__title {{getContentByLang title}} 
      |{{#each content}}
      .inner-part-column {{getContentByLang this}}
      |{{/each}}
    |</script>

